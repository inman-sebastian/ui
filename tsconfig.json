{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "react-jsx",
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "dist", "*.config.ts"]
}