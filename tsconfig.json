{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx"]
}